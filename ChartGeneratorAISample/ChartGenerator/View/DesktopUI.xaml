<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:buttons="clr-namespace:Syncfusion.Maui.Toolkit.Buttons;assembly=Syncfusion.Maui.Toolkit"
             x:Class="ChartGenerator.DesktopUI"
             xmlns:core="clr-namespace:Syncfusion.Maui.Core;assembly=Syncfusion.Maui.Core"
             xmlns:local="clr-namespace:ChartGenerator"
             >

    <ContentPage.Resources>
        <LinearGradientBrush x:Key="strokeGradient"
     StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="RoyalBlue" Offset="0.0" />
            <GradientStop Color="#FFD322FF" Offset="1.0" />
        </LinearGradientBrush>
    </ContentPage.Resources>
    
    <ContentPage.BindingContext>
        <local:ChartViewModel/>
    </ContentPage.BindingContext>
    
    <ScrollView>
            <VerticalStackLayout VerticalOptions="Center" Padding="20" Spacing="20">

            <Label Text="AI-Powered Chart Creator"
                   FontSize="32" FontAttributes="Bold"
                   HorizontalOptions="Center" />

            <Label Text="Create visually striking charts with simple text prompts, transforming complex data into captivating visual stories."
                   FontSize="18"
                   HorizontalOptions="Center"
                   TextColor="Gray" />

            <Grid ColumnDefinitions="500,auto" HorizontalOptions="Center" ColumnSpacing="5" Padding="5">

                    <Grid RowDefinitions="Auto,*,Auto" HorizontalOptions="FillAndExpand" Grid.Column="0">
                    <StackLayout BindableLayout.ItemsSource="{Binding ImageSourceCollection}"
              Grid.Row="1"
             Margin="5,5,5,0"
             IsVisible="{Binding HasImageUploaded}" 
             Orientation="Horizontal">
                        <BindableLayout.ItemTemplate>
                            <DataTemplate>
                                <Grid HeightRequest="60"
                  WidthRequest="60" x:Name="border"
                  ColumnDefinitions="Auto"
                  HorizontalOptions="Start">
                                    <Border Stroke="Transparent"
                        StrokeThickness="0"
                        WidthRequest="50"
                        HeightRequest="50"
                        HorizontalOptions="Center"
                        VerticalOptions="Center">
                                        <Border.StrokeShape>
                                            <RoundRectangle CornerRadius="10"/>
                                        </Border.StrokeShape>

                                        <Image Source="{Binding .}"
                           WidthRequest="50" 
                           HeightRequest="50"
                           Aspect="Fill"/>
                                    </Border>
                                    <core:SfBadgeView HorizontalOptions="End"
                                      WidthRequest="60" 
                                      VerticalOptions="Start">
                                        <core:SfBadgeView.Content>
                                            <StackLayout HorizontalOptions="End" 
                                     HeightRequest="16" 
                                     WidthRequest="16">
                                                <StackLayout.GestureRecognizers>
                                                    <TapGestureRecognizer Command="{Binding Source={x:Reference editor}, Path=BindingContext.CancelImageSelected}"
                      CommandParameter="{Binding .}"/>
                                                </StackLayout.GestureRecognizers>
                                            </StackLayout>
                                        </core:SfBadgeView.Content>
                                        <core:SfBadgeView.BadgeSettings>
                                            <core:BadgeSettings Position="TopRight" 
                                            FontSize="10" 
                                            Icon="Delete"/>
                                        </core:SfBadgeView.BadgeSettings>
                                    </core:SfBadgeView>
                                </Grid>
                            </DataTemplate>
                        </BindableLayout.ItemTemplate>
                    </StackLayout>
                    <Editor Grid.Row="2" IsEnabled="{Binding IsDisable}"  x:Name="editor"
                                BackgroundColor="Transparent"
                                HeightRequest="100"
                                PlaceholderColor="Gray"
                                Text="{Binding EntryText}"
                                Placeholder="Describe what you want to create.."
                                HorizontalOptions="FillAndExpand"
                                FontSize="14"  
                                TextColor="Black">
                       
                    </Editor>
                   

                    <core:SfChipGroup ItemHeight="40" Margin="5,50,5,5" 
                                    ChipCornerRadius="20" 
                                    ChipBackground="Transparent" 
                                    ChipStrokeThickness="0"  
                                    Grid.Row="3"
                                    ChipPadding="0"
                                    ChipClicked="OnChipClicked"
                                    ItemsSource="{Binding Path=EditorOptions}">         
                        <core:SfChipGroup.ItemTemplate>
                            <DataTemplate>
                                <Grid x:Name="editorOptionGrid" ColumnDefinitions="Auto,Auto">
                                    <Label x:Name="editorOptions"
                                         Text="{Binding Icon}"
                                         VerticalTextAlignment="Center" 
                                         HorizontalTextAlignment="Center" 
                                         HorizontalOptions="Center" 
                                         FontFamily="MauiSampleFontIcon" 
                                         TextColor="#611C1B1F"
                                         FontSize="20"
                                         WidthRequest="40"   >
                                        <Label.GestureRecognizers>
                                            <TapGestureRecognizer Command="{Binding Source={x:Reference editor}, Path=BindingContext.AttachmentContextMenuCommand}" CommandParameter="{Binding .}" />
                                        </Label.GestureRecognizers>

                                    </Label>
                                    
                                
                                </Grid>
                            </DataTemplate>
                        </core:SfChipGroup.ItemTemplate>
                    </core:SfChipGroup>
                    <core:SfBusyIndicator IsRunning="{Binding IsLoading}"
                                              IsVisible="{Binding IsLoading}"
                                              AnimationType="SingleCircle"/>
                   
                </Grid>

                <buttons:SfButton Text="&#xe76f;" 
                         FontFamily="MauiSampleFontIcon" 
                            Background="{StaticResource strokeGradient}" 
                            TextColor="White"
                            IsEnabled="{Binding IsDisable}"
                            CornerRadius="10"
                            Command="{Binding CreateButtonClicked}"
                            HorizontalOptions="End"
                            VerticalOptions="End"
                            HeightRequest="40"
                                  WidthRequest="40"
                                  FontSize="18"
                            Grid.Column="1">
                    </buttons:SfButton>
                </Grid>

            <HorizontalStackLayout Spacing="10"
                                       HorizontalOptions="Center"
                                       >
                    <Label Text="Try these"
                       FontSize="14"
                       TextColor="#322B35" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>

                <Button Text="&quot;Visualize revenue distribution by region.&quot;"
                        FontSize="12"
                        x:Name="barButton"
                        TextColor="#322B35"
                        Background="#F4F4F4"
                        HorizontalOptions="Center"
                        WidthRequest="150"
                        LineBreakMode="WordWrap"
                        Command="{Binding ButtonClicked}"
                        CommandParameter="{Binding Text, Source={x:Reference barButton}}">
                </Button>

                <Button Text="&quot;Generate a monthly sales data pie chart.&quot;"
                        FontSize="12"
                        x:Name="pieButton"
                        TextColor="#322B35"
                        Background="#F4F4F4"
                        HorizontalOptions="Center"
                        WidthRequest="150"
                        LineBreakMode="WordWrap"
                        Command="{Binding ButtonClicked}"
                        CommandParameter="{Binding Text, Source={x:Reference pieButton}}"/>

                <Button x:Name="doughnutButton" 
                        Text="&quot;Draft a doughnut chart for project task completion.&quot;"
                        FontSize="12"
                        TextColor="#322B35"
                        Background="#F4F4F4"
                        HorizontalOptions="Center" 
                        LineBreakMode="WordWrap"
                        WidthRequest="150"
                        Command="{Binding ButtonClicked}"
                        CommandParameter="{Binding Text, Source={x:Reference doughnutButton}}"/>
            </HorizontalStackLayout>

            </VerticalStackLayout>
        </ScrollView>
   
</ContentPage>